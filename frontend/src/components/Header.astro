---
interface Props {
  title: string;
}

const { title } = Astro.props;

import { Picture } from 'astro:assets';
import logosolo from '../assets/LogoSolo.png';
---

<header class="header-container">
  <div class="wrapper">
    <nav class="nav-menu">
      <a href="#hero" class="nav-item nav-item-active">Inicio</a>
      <a href="#" class="nav-item">Nosotros</a>
      <a href="#" class="nav-item">Servicios</a>
      <a href="#" class="nav-item">Propiedades</a>
      <a href="#" class="nav-item">Contacto</a>
    </nav>
    <div class="logo-container">
      <Picture src={logosolo} formats={['avif', 'webp', 'png']} alt="Coceres Propiedades Logo" class="logo-image" />
      <h1 class="logo-text">
        COCERES <br /> PROPIEDADES
      </h1>
    </div>
  </div>
</header>

<style>
.header-container {
  font-family: Assistant, sans-serif;
  white-space: nowrap;
}

.wrapper {
  max-width: 1200px;
  display: flex;
  justify-content: space-between;
  margin: 16px auto 0;
}

.nav-menu {
  display: flex;
  align-items: start;
  font-size: 16px;
  color: #2b2b2b;
  font-weight: 300;
  margin: auto 0;
}

.nav-item {
  border-radius: 30px;
  padding: 13px 16px;
  text-decoration: none;
}

.nav-item-active {
  background-color: rgba(67, 97, 238, 0.3);
}

.logo-container {
  display: flex;
  font-size: 20px;
  color: #1e1e1e;
  font-weight: 600;
}

.logo-image {
  aspect-ratio: 1;
  object-fit: contain;
  object-position: center;
  width: 64px;
  height: 64px;
}

.logo-text {
  margin: auto 0;
  font-size: 18px;
}

@media (max-width: 991px) {
  .header-container {
    white-space: initial;
  }

  .header-content {
    max-width: 100%;
    padding: 0 20px;
  }

  .nav-menu {
    max-width: 100%;
    white-space: initial;
  }

  .nav-item {
    white-space: initial;
  }
}
</style>
