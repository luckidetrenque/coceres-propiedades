---
// Contacto.astro
import { Icon } from "astro-icon/components";
---

<section class="py-16 bg-white">
  <div class="max-w-[1200px] mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Columna 1: Información de contacto -->
      <div class="text-center lg:text-left">
        <h2 class="text-3xl font-sans-bold text-gray-800 text-center uppercase">
          Información de contacto
        </h2>

        <div class="space-y-6 mt-8">
          <table class="w-full">
            <tbody class="space-y-4">
              <!-- Dirección -->
              <tr class="block mb-4 text-center lg:text-left">
                <td class="font-semibold text-gray-800 block pb-2"
                  >Dirección:</td
                >
                <td class="text-gray-600 block">
                  <div class="flex items-start justify-center lg:justify-start">
                    <Icon
                      name="contact/domicilio"
                      class="w-5 h-5 mr-2 text-sky-600 mt-0.5 flex-shrink-0"
                    />
                    <span
                      >Calle 64 N° 719, La Plata<br />Buenos Aires, Argentina</span
                    >
                  </div>
                </td>
              </tr>

              <!-- Horario -->
              <tr class="block mb-4 text-center lg:text-left">
                <td class="font-semibold text-gray-800 block pb-2">Horario:</td>
                <td class="text-gray-600 block">
                  <div class="flex items-start justify-center lg:justify-start">
                    <Icon
                      name="contact/horario"
                      class="w-5 h-5 mr-2 text-sky-600 mt-0.5 flex-shrink-0"
                    />
                    <span
                      >Lunes a Viernes: 9:00 - 18:00<br />Sábados: 9:00 - 13:00</span
                    >
                  </div>
                </td>
              </tr>

              <!-- Teléfono -->
              <tr class="block mb-4 text-center lg:text-left">
                <td class="font-semibold text-gray-800 block pb-2">Teléfono:</td
                >
                <td class="text-gray-600 block">
                  <div
                    class="flex items-center justify-center lg:justify-start"
                  >
                    <Icon
                      name="contact/telefono"
                      class="w-5 h-5 mr-2 text-sky-600 mt-0.5 flex-shrink-0"
                    />
                    <a
                      href="tel:+5492214959866"
                      class="hover:text-sky-600 transition-colors"
                    >
                      +54 9 221 495-9866
                    </a>
                  </div>
                </td>
              </tr>

              <!-- WhatsApp -->
              <tr class="block mb-4 text-center lg:text-left">
                <td class="font-semibold text-gray-800 block pb-2">WhatsApp:</td
                >
                <td class="text-gray-600 block">
                  <div
                    class="flex items-center justify-center lg:justify-start"
                  >
                    <Icon
                      name="contact/whatsapp"
                      class="w-5 h-5 mr-2 text-sky-600 mt-0.5 flex-shrink-0"
                    />
                    <a
                      href="https://wa.me/5492215054680"
                      target="_blank"
                      rel="noopener"
                      class="hover:text-green-600 transition-colors"
                    >
                      +54 9 221 505-4680
                    </a>
                  </div>
                </td>
              </tr>

              <!-- Correo electrónico -->
              <tr class="block mb-4 text-center lg:text-left">
                <td class="font-semibold text-gray-800 block pb-2"
                  >Correo electrónico:</td
                >
                <td class="text-gray-600 block">
                  <div
                    class="flex items-center justify-center lg:justify-start"
                  >
                    <Icon
                      name="contact/email"
                      class="w-5 h-5 mr-2 text-sky-600 mt-0.5 flex-shrink-0"
                    />
                    <a
                      href="mailto:cocerespropiedades@gmail.com"
                      class="hover:text-sky-600 transition-colors"
                    >
                      cocerespropiedades@gmail.com
                    </a>
                  </div>
                </td>
              </tr>

              <!-- Redes sociales -->
              <tr class="block mb-4 text-center lg:text-left">
                <td class="font-semibold text-gray-800 block pb-2"
                  >Redes sociales:</td
                >
                <td class="text-gray-600 block">
                  <div class="flex space-x-4 justify-center lg:justify-start">
                    <!-- Facebook -->
                    <a
                      href="https://facebook.com/cocerespropiedades"
                      target="_blank"
                      rel="noopener"
                      class="text-blue-600 hover:text-blue-700 transition-colors"
                    >
                      <Icon
                        name="social/facebook"
                        class="w-5 h-5 mr-2 text-sky-600 mt-0.5 flex-shrink-0"
                      />
                    </a>

                    <!-- Instagram -->
                    <a
                      href="https://instagram.com/cocerespropiedades"
                      target="_blank"
                      rel="noopener"
                      class="text-pink-600 hover:text-pink-700 transition-colors"
                    >
                      <Icon
                        name="social/instagram"
                        class="w-5 h-5 mr-2 text-sky-600 mt-0.5 flex-shrink-0"
                      />
                    </a>

                    {
                      /* 
                    <!-- Por ahora no tienen twitter -->
                    <!-- Twitter -->
                    <a href="https://twitter.com/coceresprop" target="_blank" rel="noopener" class="text-blue-400 hover:text-blue-500 transition-colors">
                      <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    hover:text-pink-700 transition-colors">
                    <Icon name="twitter" class="w-5 h-5 mr-2 text-sky-600 mt-0.5 flex-shrink-0" />
                    </a>
                    */
                    }
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Columna 2: Formulario de contacto -->
      <div class="text-center lg:text-left">
        <h2
          class="hidden text-3xl font-sans-bold text-gray-800 text-center uppercase lg:block"
        >
          Contáctenos
        </h2>

        <form class="space-y-6 mt-8" id="contact-form">
          <!-- Nombre completo -->
          <input
            type="text"
            name="nombre"
            placeholder="Nombre completo *"
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition-colors"
          />

          <!-- Correo electrónico -->
          <input
            type="email"
            name="email"
            placeholder="Correo electrónico *"
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition-colors"
          />

          <!-- Teléfono -->
          <input
            type="tel"
            name="telefono"
            placeholder="Teléfono"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition-colors"
          />

          <!-- Asunto -->
          <input
            type="text"
            name="asunto"
            placeholder="Asunto *"
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition-colors"
          />

          <!-- Mensaje -->
          <textarea
            name="mensaje"
            placeholder="Mensaje *"
            required
            rows="5"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition-colors resize-vertical"
          ></textarea>

          <!-- Texto de datos requeridos -->
          <p class="text-sm text-gray-500">* Datos requeridos</p>

          <!-- Botón enviar -->
          <button
            type="submit"
            class="w-full bg-sky-600 text-white font-semibold py-3 px-6 rounded-lg hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-offset-2 transition-colors duration-200"
          >
            Enviar
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  // Funcionalidad del formulario de contacto
  const contactForm = document.getElementById(
    "contact-form"
  ) as HTMLFormElement;

  contactForm?.addEventListener("submit", (e) => {
    e.preventDefault();

    const formData = new FormData(contactForm);
    const data = {
      nombre: formData.get("nombre"),
      email: formData.get("email"),
      telefono: formData.get("telefono"),
      asunto: formData.get("asunto"),
      mensaje: formData.get("mensaje"),
    };

    // Aquí puedes agregar la lógica para enviar el formulario
    // Por ejemplo, enviar a una API o servicio de correo
    console.log("Datos del formulario:", data);

    // Mensaje de confirmación temporal
    alert("¡Gracias por contactarnos! Te responderemos a la brevedad.");

    // Limpiar formulario
    contactForm.reset();
  });
</script>
