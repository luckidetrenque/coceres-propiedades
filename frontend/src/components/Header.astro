<style>
    .header-container {
  display: flex;
  flex-direction: column;
  font-family: Assistant, sans-serif;
  white-space: nowrap;
}

.header-content {
  background: #fff;
  display: flex;
  width: ;
  justify-content: space-between;
  padding: 11px 80px 5px;
}

.nav-menu {
  display: flex;
  align-items: start;
  font-size: 16px;
  color: #2b2b2b;
  font-weight: 300;
  margin: auto 0;
}

.nav-item {
  border-radius: 30px;
  padding: 13px 16px;
}

.nav-item-active {
  background-color: rgba(67, 97, 238, 0.3);
}

.logo-container {
  display: flex;
  font-size: 20px;
  color: #1e1e1e;
  font-weight: 600;
}

.logo-image {
  aspect-ratio: 1;
  object-fit: contain;
  object-position: center;
  width: 64px;
}

.logo-text {
  margin: auto 0;
  font-size: 18px;
}

@media (max-width: 991px) {
  .header-container {
    white-space: initial;
  }

  .header-content {
    max-width: 100%;
    padding: 0 20px;
  }

  .nav-menu {
    max-width: 100%;
    white-space: initial;
