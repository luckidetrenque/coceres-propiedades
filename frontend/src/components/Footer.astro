---
import { Picture } from "astro:assets";
import { Icon } from "astro-icon/components";
import logoburbujaarriba from "../assets/logoburbujaarriba.png";
---

<footer class="w-full bg-gray-800 text-white py-12">
  <div class="max-w-[1200px] mx-auto px-4">
    <div
      class="flex flex-col md:flex-row justify-between items-center md:items-center gap-8"
    >
      <div
        class="flex items-center justify-between w-full md:w-auto mb-6 md:mb-0"
      >
        <!-- Logo Section -->
        <div class="flex-0">
          <a
            href="/"
            class="text-white font-bold text-xl"
            aria-label="Ir al inicio - Cóceres Propiedades"
          >
            <Picture
              src={logoburbujaarriba}
              formats={["png"]}
              alt="Inicio"
              class="featured-image"
              width={128}
            />
          </a>
        </div>
        <!-- Dirección -->
        <div class="flex items-start">
          <Icon
            name="contact/domicilio"
            class="w-5 h-5 mr-2 text-sky-600 flex-shrink-0"
          />
          <div>
            <p class="text-gray-300">
              Calle 64 N° 719, La Plata<br />
              Buenos Aires, Argentina
            </p>
          </div>
        </div>
      </div>

      <!-- Contact Information -->
      <div class="flex-1 md:max-w-3xl">
        <div
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8"
        >
          <!-- Redes Sociales -->
          <div class="text-center min-w-0 lg:text-left">
            <h3 class="font-semibold text-lg mb-3 text-sky-400">
              Redes Sociales
            </h3>
            <div class="space-y-2">
              {
                /*
              <!-- Por ahora no tienen twitter -->
              <div class="flex items-center">
                
            <Icon name="twitter" class="w-5 h-5 mr-2 text-sky-600 flex-shrink-0" />
                
                <a href="https://twitter.com/coceresprop" target="_blank" rel="noopener" class="text-gray-300 hover:text-white transition-colors" aria-label="Visitar página de Twitter de Cóceres Propiedades">
                  @CoceresProps
                </a>
                
              </div>
              */
              }
              <div class="flex items-center justify-center lg:justify-start">
                <Icon
                  name="social/facebook"
                  class="w-5 h-5 mr-2 text-sky-600 flex-shrink-0"
                />
                <a
                  href="https://facebook.com/cocerespropiedades"
                  target="_blank"
                  rel="noopener"
                  class="text-gray-300 hover:text-white transition-colors"
                  aria-label="Visitar página de Facebook de Cóceres Propiedades"
                >
                  Coceres Propiedades
                </a>
              </div>
              <div class="flex items-center justify-center lg:justify-start">
                <Icon
                  name="social/instagram"
                  class="w-5 h-5 mr-2 text-sky-600 flex-shrink-0"
                />
                <a
                  href="https://instagram.com/cocerespropiedades"
                  target="_blank"
                  rel="noopener"
                  class="text-gray-300 hover:text-white transition-colors"
                  aria-label="Visitar página de Instagram de Cóceres Propiedades"
                >
                  @cocerespropiedades
                </a>
              </div>
            </div>
          </div>

          <!-- Teléfonos -->
          <div class="text-center min-w-0 lg:text-left">
            <h3 class="font-semibold text-lg mb-3 text-sky-400">Teléfonos</h3>
            <div class="space-y-2">
              <div class="flex items-center justify-center lg:justify-start">
                <Icon
                  name="contact/telefono"
                  class="w-5 h-5 mr-2 text-sky-600 flex-shrink-0"
                />
                <a
                  href="tel:+542214959866"
                  class="text-gray-300 hover:text-white transition-colors"
                  aria-label="Llamar al teléfono +54 9 221 495-9866"
                >
                  +54 9 221 495-9866
                </a>
              </div>
              <div class="flex items-center justify-center lg:justify-start">
                <Icon
                  name="contact/whatsapp"
                  class="w-5 h-5 mr-2 text-sky-600 flex-shrink-0"
                />
                <a
                  href="https://wa.me/542215054680"
                  target="_blank"
                  rel="noopener"
                  class="text-gray-300 hover:text-white transition-colors"
                  aria-label="Enviar mensaje por WhatsApp al +54 9 221 505-4680"
                >
                  +54 9 221 505-4680
                </a>
              </div>
            </div>
          </div>

          <!-- Email -->
          <div class="text-center min-w-0 lg:text-left">
            <h3 class="font-semibold text-lg mb-3 text-sky-400">Email</h3>
            <div class="space-y-2">
              <div class="flex items-center justify-center lg:justify-start">
                <Icon
                  name="contact/email"
                  class="w-5 h-5 mr-2 text-sky-600 flex-shrink-0"
                />
                <a
                  href="mailto:cocerespropiedades@gmail.com"
                  class="text-gray-300 hover:text-white transition-colors"
                  aria-label="Enviar email a cocerespropiedades@gmail.com"
                >
                  cocerespropiedades@gmail.com
                </a>
              </div>
              <div class="flex items-center justify-center lg:justify-start">
                <Icon
                  name="contact/email"
                  class="w-5 h-5 mr-2 text-sky-600 flex-shrink-0"
                />
                <a
                  href="mailto:ventas@cocerespropiedades.com"
                  class="text-gray-300 hover:text-white transition-colors"
                  aria-label="Enviar email a ventas@cocerespropiedades.com"
                >
                  ventas@cocerespropiedades.com
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-8 pt-8 border-t border-gray-700 text-center">
      <p class="text-gray-400 text-sm">
        © 2025 Coceres Propiedades. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>
