---
import { Picture } from "astro:assets";
import logoburbujaarriba from "../assets/logoburbujaarriba.png";
---

<header class="sticky top-0 w-full bg-coceres-green z-50 shadow-md">
  <div class="max-w-[1200px] mx-auto px-4 py-4 flex items-center justify-between relative">
    <!-- Logo -->
    <div class="flex-shrink-0">
      <a href="/" class="flex items-center space-x-3 text-white font-SANS text-xl">
        <Picture
          src={logoburbujaarriba}
          formats={["png"]}
          alt="Coceres Propiedades"
          class="featured-image"
          width={80}
        />
        <span class="text-white font-sans text-xl">COCERES PROPIEDADES</span>
      </a>
      <!-- Si tienes una imagen de logo, reemplaza con: -->
      <!-- <img src="/logo.png" alt="Logo" class="h-8 w-auto"> -->
    </div>

    <!-- Menú de navegación -->
    <nav class="hidden md:flex relative z-10">
      <ul class="flex space-x-8">
        <!-- <li>
          <a href="/" class="text-white hover:text-sky-100 transition-colors duration-200 font-medium">
            Inicio
          </a>
        </li> -->
        <li>
          <a href="/nosotros" class="text-white hover:text-sky-100 transition-colors duration-200 font-sans-bold uppercase">
            Nosotros
          </a>
        </li>
        <li>
          <a href="/servicios" class="text-white hover:text-sky-100 transition-colors duration-200 font-sans-bold uppercase">
            Servicios
          </a>
        </li>
        <li>
          <a href="/propiedades" class="text-white hover:text-sky-100 transition-colors duration-200 font-sans-bold uppercase">
            Propiedades
          </a>
        </li>
        <li>
          <a href="/contacto" class="text-white hover:text-sky-100 transition-colors duration-200 font-sans-bold uppercase">
            Contacto
          </a>
        </li>
      </ul>
    </nav>

    <!-- Botón hamburguesa para móviles -->
    <button id="mobile-menu-button" class="md:hidden text-white p-2">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <!-- Menú móvil -->
  <nav id="mobile-menu" class="md:hidden bg-coceres-dark hidden">
    <ul class="px-4 py-2 space-y-2">
      <!-- <li>
        <a href="/" class="block text-white hover:text-sky-100 py-2 transition-colors duration-200">
          Inicio
        </a>
      </li> -->
      <li>
        <a href="/nosotros" class="block text-white hover:text-sky-100 py-2 transition-colors duration-200">
          Nosotros
        </a>
      </li>
      <li>
        <a href="/servicios" class="block text-white hover:text-sky-100 py-2 transition-colors duration-200">
          Servicios
        </a>
      </li>
      <li>
        <a href="/propiedades" class="block text-white hover:text-sky-100 py-2 transition-colors duration-200">
          Propiedades
        </a>
      </li>
      <li>
        <a href="/contacto" class="block text-white hover:text-sky-100 py-2 transition-colors duration-200">
          Contacto
        </a>
      </li>
    </ul>
  </nav>
</header>

<script>
  // Funcionalidad del menú móvil
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
<style>
  /* Colores personalizados del header */
  .header-custom {
    background-color: #38A6A4;
  }
  
  .mobile-menu-custom {
    background-color: #2d8a88;
  }

  .header-container {
    font-family: Assistant, sans-serif;
    white-space: nowrap;
    position: fixed;
    width: 100%;
    top: 0;
  }

  .wrapper {
    max-width: 1200px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 32px;
    margin: 16px auto 0;
  }

  .nav-menu {
    display: flex;
    align-items: start;
    font-size: 16px;
    color: #2b2b2b;
    font-weight: 300;
    margin: auto 0;
  }

  .nav-item {
    border-radius: 30px;
    padding: 13px 16px;
    text-decoration: none;
  }

  .nav-item-active {
    background-color: rgba(67, 97, 238, 0.3);
  }

  .logo-container {
    display: flex;
    font-size: 20px;
    color: #1e1e1e;
    font-weight: 600;
  }

  .logo-image {
    aspect-ratio: 1;
    object-fit: contain;
    object-position: center;
    width: 64px;
    height: 64px;
  }

  .logo-text {
    margin: auto 0;
    font-size: 18px;
  }

  @media (max-width: 991px) {
    .header-container {
      white-space: initial;
    }

    .header-content {
      max-width: 100%;
      padding: 0 20px;
    }

    .nav-menu {
      max-width: 100%;
      white-space: initial;
    }

    .nav-item {
      white-space: initial;
    }
  }
</style>
